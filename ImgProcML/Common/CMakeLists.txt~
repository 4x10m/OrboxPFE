cmake_minimum_required(VERSION 3.2)

set(SHARED_LIB_INCLUDE_DIR ${CMAKE_CURRENT_SOURCE_DIR}/inc)
set(SHARED_LIB_INCLUDE_DIR ${SHARED_LIB_INCLUDE_DIR} PARENT_SCOPE)

project(RoisUtil)

find_package(OpenCV REQUIRED)
find_package(Threads REQUIRED)

include_directories(${OpenCV_INCLUDE_DIRS})

set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=c++1y")
set(SOURCE_FILES main.cpp App.cpp App.h ../Common/InputParser.h ../Common/Timer.h ../Common/Logger.h)

add_executable(roisutil ${SOURCE_FILES})

target_link_libraries(roisutil ${OpenCV_LIBS})
target_link_libraries(roisutil ${CMAKE_THREAD_LIBS_INIT})
