#ifndef COMMON_LOGGER_H
#define COMMON_LOGGER_H

#include <iostream>
#include <string>
#include <fstream>


class Logger {
private:
    bool verbose = false;
    std::string pathToLog = "";
    std::ofstream logfile;

public:
    void logMsg(std::string msg) {
        if (verbose) {
            if (pathToLog.empty())
                cout << msg << endl;
            else {
                time_t timestamp = time(nullptr);
                logfile << '[' << asctime(localtime(&timestamp)) << "] " << msg <<
                '\n';
            }
        }
    };

    void setVerbose() {
        verbose = true;
    };

    void setLogFile(std::string path) {
        pathToLog = path;
        logfile.open(path);
    };

};

#endif //COMMON_LOGGER_H
